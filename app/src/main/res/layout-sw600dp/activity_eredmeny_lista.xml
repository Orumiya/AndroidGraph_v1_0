<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/mainbackground"
tools:context="mobilapp.kutatok.androidgraph.EredmenyLista">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#C3CED8"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pathfindingResultList"
        android:layout_margin="10dp">
    </ListView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gametabs"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Útkeresés"
            android:gravity="left"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Felfedezés"
            android:gravity="right"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#496172"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/discoveryResultList"
        android:layout_margin="10dp">
    </ListView>


</LinearLayout>

</LinearLayout>

