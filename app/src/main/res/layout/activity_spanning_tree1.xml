<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="11"
    app:rowCount="15"
    android:id="@+id/layoutSpanning"
    android:background="@drawable/jatek2"
    android:keepScreenOn="true"
    tools:context="mobilapp.kutatok.androidgraph.games.SpanningTree1">

    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:visibility="gone"
        android:id="@+id/space"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="3"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="4"
        app:layout_row="4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="5"
        app:layout_row="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="6"
        app:layout_row="6"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="7"
        app:layout_row="7"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="8"
        app:layout_row="8"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="9"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="10"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="11"
        app:layout_rowSpan="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="12"
        app:layout_rowSpan="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="13"
        app:layout_rowSpan="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="14"
        app:layout_rowSpan="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="10"
        app:layout_row="12"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:visibility="gone"
        android:id="@+id/spaceLast"
        />

    <!-- ********************************************************************************* -->
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl1"
        android:id="@+id/kor_a"

        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="6"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl2"
        android:id="@+id/kor_b"
        app:layout_columnSpan="3"
        app:layout_rowSpan="3"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="3"
        app:layout_row="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl12"
        android:id="@+id/kor_c"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="9"
        app:layout_row="4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl10"
        android:id="@+id/kor_d"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="6"
        app:layout_row="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl5"
        android:id="@+id/kor_e"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="3"
        app:layout_row="7"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl6"
        android:id="@+id/kor_f"
        app:layout_rowSpan="2"
        app:layout_columnSpan="2"
        />

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="2"
        app:layout_row="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/asteroid"
        android:id="@+id/ast1"
        app:layout_rowSpan="2"
        app:layout_columnSpan="2"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="7"
        app:layout_row="8"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl8"
        android:id="@+id/kor_g"

        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="8"
        app:layout_row="11"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl9"
        android:id="@+id/kor_h"
        app:layout_columnSpan="2"
        app:layout_rowSpan="2"
        />

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="1"
        app:layout_row="11"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl7"
        android:id="@+id/kor_i"
        app:layout_columnSpan="3"
        app:layout_rowSpan="2"
        />
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_column="5"
        app:layout_row="12"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="@drawable/pl4"
        android:id="@+id/kor_j"
        />
    <Button
        android:id="@+id/keszGomb"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_column="8"
        app:layout_columnSpan="2"
        app:layout_row="13"
        app:layout_rowSpan="2"
        android:background="@drawable/keszbutton"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Kész!"/>
    <RelativeLayout
        android:id="@+id/buttonGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="13"
        app:layout_column="1"
        app:layout_columnSpan="9"
        app:layout_rowSpan="2"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:background="@drawable/buttongroup"
        android:text="" />
    <ProgressBar
        android:id="@+id/keszProgress"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_column="8"
        app:layout_columnSpan="2"
        app:layout_row="13"
        app:layout_rowSpan="2"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/custom_progressbar"
        android:visibility="gone"/>

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/logo"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_column="4"
        app:layout_columnSpan="3"
        app:layout_row="13"
        app:layout_rowSpan="2"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/eredmenyText"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_columnSpan="7"
        app:layout_row="13"
        app:layout_rowSpan="1"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:visibility="gone"/>
    <TextView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/visszaFomenu"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_columnSpan="7"
        app:layout_row="14"
        app:layout_rowSpan="1"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textSize="23sp"
        android:textColor="#bababa"
        android:gravity="center"
        android:text="Főmenü"
        android:visibility="gone"/>

</android.support.v7.widget.GridLayout>
