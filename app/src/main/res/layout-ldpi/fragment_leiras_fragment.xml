<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobilapp.kutatok.androidgraph.box.leiras_fragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_tab"
        android:textSize="22sp"
        android:paddingTop="5dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:id="@+id/descriptionTitle"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="Szélességi bejárás"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/descriptionline"
        android:layout_below="@id/descriptionTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/descriptionTitle"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:id="@+id/descriptionImage"
                android:scaleType="fitXY"
                android:src="@drawable/descr2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spanningTree"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@id/descriptionImage"
                android:background="@drawable/buttongroup"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Minimális feszítőfa játék"
                    android:textColor="#eec000"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_playback_play"/>
            </LinearLayout>

            <TextView
                android:id="@+id/leirasText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:layout_below="@id/descriptionImage"
                android:textSize="16sp"
                android:text="" />

        </RelativeLayout>



    </ScrollView>



</RelativeLayout>
