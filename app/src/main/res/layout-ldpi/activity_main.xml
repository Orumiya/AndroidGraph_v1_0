<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context="mobilapp.kutatok.androidgraph.MainActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/mainline2"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/mainline1"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/startAlgorithm"
                android:padding="20dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/graphicon"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:text="Algoritmusok"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/startGames"
                android:layout_marginBottom="30dp"
                android:padding="20dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/gameicon"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:layout_weight="4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:text="Játék"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/startLeaderboard"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/leaderboardicon"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:text="Eredmények"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/startAboutPage"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/infoicon"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:text="Info"/>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
